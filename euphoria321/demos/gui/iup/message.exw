-- Displays a message-box; close to exit.
--------------------------------------------------------------------------------
-- Version 3.2.1.1
-- Dated 2020.01.29
-- Author C A Newbould
-- Status modified from Eu4 version
--------------------------------------------------------------------------------
-- includes
--------------------------------------------------------------------------------
include gui/iup/iup.ew as IUP
include std/types.e
--------------------------------------------------------------------------------
-- routines
--------------------------------------------------------------------------------
procedure main(string title)
    -- initialise
    IUP:init("")
    -- open library 
    IupOpen()
    -- Executes IupMessage
    IupMessage(title, "Press the OK button to exit")
    -- Finishes IUP
    IupClose ()
    -- Program finished successfully
end procedure
--------------------------------------------------------------------------------
-- execution
--------------------------------------------------------------------------------
main("IupMessage Example")
--------------------------------------------------------------------------------
